[flake8]
max-line-length = 100
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    .pytest_cache

# 忽略的错误代码
ignore = 
    E203,  # whitespace before ':'
    W503,  # line break before binary operator
    E501,  # line too long (handled by black)

# 每个文件的最大行数
max-doc-length = 100

# 导入检查
import-order-style = google
application-import-names = ai_engine